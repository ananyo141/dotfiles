# Aliases for the current shell
# Source them in the shell config

# filesystem manipulation
alias ls='ls -F --color=auto'
alias la='ls -AFh --color=auto'
alias ll='ls -AFhl --color=auto'
alias cp='cp -rvi'
alias mv='mv -vi'
alias py='python3'
alias x='exa --icons'
alias trees='tree -ahF -t --du --filesfirst -C | less -R'
alias disks='lsblk | grep -v loop'

# package manager
alias pacup='sudo pacman -Syu --noconfirm'
alias updates='checkupdates | tee /dev/tty | wc -l'

# compiler
alias gs++='g++ -Wall -fsanitize=address -fsanitize=undefined -fno-omit-frame-pointer'
alias gdl='g++ -g leetcode.cpp && gdb -q ./a.out --tui'

# vim aliases
alias v='vim'
alias vs='vim -S'
alias vrc='vim ~/.vimrc'
alias nvim='lvim'
alias nvs='nvim -S'
alias lrc='nvim ~/.config/lvim/config.lua'
alias nvrc='nvim ~/.config/nvim/init.lua'

# tmux Aliases
alias tmas='tmux attach-session -t'
alias tmks='tmux kill-session -t'
alias tmns='tmux new-session -t'
alias tmls='tmux ls'

# Git Aliases
alias gits='git status'
alias gitf='git fetch'
alias gitp='git pull'
alias gitd='git diff'
alias gitds='git diff --staged'
alias gita='git add'
alias gitap='git add -p'
alias gitA='git add -A'
alias gitb='git branch'
alias gitc='git commit'
alias gitcp='git commit && git push'
alias gitP='git push'
alias gitl='git log --stat'
alias gitss='git show'
alias gitu='git add . && git commit && git push'
alias gitch='git checkout'
alias gitsw='git switch'
alias gitcount='git rev-list --count HEAD'

